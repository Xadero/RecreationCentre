@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style type="text/css">
    body {
        background: #ccebff !important;
    }
</style>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/lakehouse3.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Wysoki standard, idealne miejsce do wypoczynku dla dzieci, młodzieży i dorosłych w niskich cenach.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Dowiedz się więcej
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/volleyball-713649_1920.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Wiele form ciekawego oraz aktywnego spędzenia wolnego czasu
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Dowiedz się więcej
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/platter-2009590_1920.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Najsmaczniejsze i najtańsze jedzenie świeżo przygotowane przez naszego szefa kuchni 
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Dowiedz się więcej
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/summer-night-1711648_1920.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Miejsce, które zapamiętasz na długie lata
                    <a class="btn btn-default" href="/Gallery">
                        Dowiedz się więcej
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>